#!/bin/bash

i_arg=0
for arg in "$@"
do
  i_arg=$((i_arg+1))
  if [ ${i_arg} -eq 1 ] ; then
    cmd=${arg}
    cmd_str=`echo ${arg} | sed -e 's/[[:space:]]/_/g'`
  else
    cmd=${cmd}" "${arg}
    cmd_str=${cmd_str}_`echo ${arg} | sed -e 's/[[:space:]]/_/g'`
  fi
done

cur_date=`date +"%Y%m%d_%k%M%S"`
host=`hostname`
log_stdout=${cmd_str}_${cur_date}.stdout
log_stderr=${cmd_str}_${cur_date}.stderr
time_cmd="time ${cmd}"

nohup bash -c ${time_cmd} > ${log_stdout} 2>> ${log_stderr} < /dev/null &
pid=`echo $!`
echo "run  '${time_cmd}'  on $host  with pid = ${pid}" > ${log_stderr}

