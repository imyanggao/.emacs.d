#!/bin/bash

cur_date=`date +"%Y%m%d_%H%M%S"`
host=`hostname`

i_arg=0
for arg in "$@"
do
  i_arg=$((i_arg+1))
  if [ ${i_arg} -eq 1 ] ; then
    cmd=${arg}
    cmd_str=`echo ${arg} | sed -e 's/[[:space:]]/_/g'`
  else
    cmd=${cmd}" "${arg}
    cmd_str=${cmd_str}_`echo ${arg} | sed -e 's/[[:space:]]/_/g'`
  fi
done

log_str=${cmd_str}_${cur_date}

if [[ ${cmd_str} =~ "th_" ]] ; then
  cmd=${cmd}" -l "${log_str}".log"
fi

log_stdout=${log_str}.out
log_stderr=${log_str}.err

nohup bash -c "(time ${cmd} > ${log_stdout})" &> ${log_stderr} < /dev/null &

ppppid=$$
pppid=`pgrep -P ${ppppid} 2> /dev/null`
ppid=`pgrep -P ${pppid} 2> /dev/null`
pid=`pgrep -P ${ppid} 2> /dev/null`
if [[ ! -z ${pid} ]] ; then
  id=${pid}
else
  if [[ ! -z ${ppid} ]] ; then
    id=${ppid}
  else
    if [[ ! -z ${pppid} ]] ; then
      id=${pppid}
    else
      if [[ ! -z ${ppppid} ]] ; then
        id=${ppppid}
      else
        echo "can't find pid"
      fi
    fi
  fi
fi
echo "run  '${cmd}'  on $host  with pid = ${id}" >> ${log_stderr}
echo "" >> ${log_stderr}
